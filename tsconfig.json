{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "~assets": [
        "./assets"
      ],
      "~assets/*": [
        "./assets/*"
      ],
      "~components": [
        "./components"
      ],
      "~components/*": [
        "./components/*"
      ],
      "~styles": [
        "./styles"
      ],
      "~styles/*": [
        "./styles/*"
      ],
    }
  },
  "include": [
    "src",
    "types"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}